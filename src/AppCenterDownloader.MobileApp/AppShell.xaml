<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppCenterDownloader.MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:AppCenterDownloader.MobileApp.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="AppCenterDownloader.MobileApp">

    <ShellContent
            Title="All Apps"
            ContentTemplate="{DataTemplate pages:AppsPage}"
            Route="apps" />

    <ShellContent
            Title="Account Editor"
            ContentTemplate="{DataTemplate pages:AccountEditorPage}"
            Route="account" />

    <ShellContent
            Title="Releases"
            ContentTemplate="{DataTemplate pages:ReleasesPage}"
            Route="releases" />

</Shell>
